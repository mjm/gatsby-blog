{
  "version": 2,
  "regions": ["sfo1", "cle1"],
  "builds": [{ "src": "api/routes/**/*.ts", "use": "@now/node" }],
  "routes": [
    {
      "src": "/api/micropub",
      "methods": ["GET"],
      "dest": "/api/routes/micropub/get.ts"
    },
    {
      "src": "/api/micropub",
      "methods": ["POST"],
      "dest": "/api/routes/micropub/post.ts"
    },
    {
      "src": "/api/micropub/media",
      "methods": ["POST"],
      "dest": "/api/routes/micropub/media.ts"
    }
  ],
  "env": {
    "GITHUB_USER": "mjm",
    "GITHUB_REPO": "gatsby-blog",
    "GITHUB_TOKEN": "@github-token",
    "NETLIFY_TOKEN": "@netlify-token",
    "HONEYCOMB_WRITE_KEY": "@honeycomb-write-key"
  },
  "github": {
    "silent": true
  }
}
